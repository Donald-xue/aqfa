.wrap { padding: 24rpx; }
.header { display:flex; justify-content: space-between; align-items:center; margin-bottom: 16rpx; }
.title { font-size: 40rpx; font-weight: 700; }
.btns button { margin-left: 12rpx; }

.table { background:#fff; border-radius: 16rpx; overflow:hidden; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.row { display:flex; padding: 16rpx 12rpx; border-bottom: 1px solid #f0f0f0; }
.row.head { background:#fafafa; font-weight: 600; }
.c { width: 70rpx; text-align:center; }
.rank { width: 50rpx; }
.team { flex: 1; text-align:left; padding-left: 8rpx; }
.pts { width: 80rpx; font-weight: 700; }

.matches { margin-top: 20rpx; background:#fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.subTitle { font-size: 32rpx; font-weight: 700; margin-bottom: 12rpx; }
.matchItem { display:flex; justify-content: space-between; padding: 12rpx 0; border-bottom: 1px solid #f3f3f3; }
.matchItem:last-child { border-bottom: none; }
.time { color:#777; font-size: 24rpx; }
.empty { color:#777; padding: 12rpx 0; }
.matchItem {
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1px solid #f3f3f3;
  gap: 12rpx;
}
.matchLeft {
  flex: 1;
  min-width: 0;
}
.matchActions { display:flex; gap: 10rpx; align-items:center; }
