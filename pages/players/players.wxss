.wrap { padding: 24rpx; }
.card { background:#fff; border-radius: 16rpx; padding: 20rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.title { font-size: 36rpx; font-weight: 700; margin-bottom: 16rpx; }
.field { margin-bottom: 16rpx; }
.label { display:block; color:#555; margin-bottom: 8rpx; }
.picker { padding: 16rpx; border: 1px solid #eee; border-radius: 12rpx; background:#fafafa; }
.row { display:flex; gap: 12rpx; align-items:center; }
.input { flex:1; padding: 16rpx; border: 1px solid #eee; border-radius: 12rpx; background:#fff; }
.subTitle { font-size: 32rpx; font-weight: 700; margin: 12rpx 0; }
.playerRow { display:flex; justify-content:space-between; align-items:center; padding: 12rpx 0; border-bottom: 1px solid #f3f3f3; }
.playerRow:last-child { border-bottom:none; }
.empty { color:#777; padding: 12rpx 0; }