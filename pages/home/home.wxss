/* pages/home/home.wxss */

.page { padding: 24rpx; }
.header { padding: 24rpx 8rpx 18rpx; }
.title { font-size: 44rpx; font-weight: 700; }
.sub { display: block; margin-top: 8rpx; font-size: 26rpx; color: #888; }

.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18rpx;
  margin-top: 18rpx;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  padding: 22rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,.06);
}

.cardTitle { font-size: 32rpx; font-weight: 700; }
.cardSub { display:block; margin-top: 10rpx; font-size: 24rpx; color:#666; }

.banner{
  position: relative;
  border-radius: 18rpx;
  overflow: hidden;
  margin-top: 16rpx;
}

.bannerImg{
  width: 100%;
  height: 90%;
}

.bannerMask{
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.25);
}

.bannerText{
  position: absolute;
  left: 20rpx;
  bottom: 16rpx;
  color: #fff;
}

.bannerTitle{
  font-size: 40rpx;
  font-weight: 800;
}

.bannerSub{
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  opacity: 0.95;
}
